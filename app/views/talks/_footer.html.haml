.message-footer
  .message-footer-area
    = form_with model:@talk, local:true, class:"from" do |f|
      .from-btn
        .from-btn-sutamp
        = link_to root_path do
          = icon('far fa-smile fa-2x', class: 'icon')
        = f.label :image, class: 'clip' do
          = icon('fas fa-paperclip fa-2x', class: 'icon')
          -# = f.file_field :image, class: 'clip'
        = f.submit "送信", class: "from-btn-submit"

      .cp_tab
        %input#tab3_1{"aria-controls" => "first_tab03", :checked => "checked", :name => "cp_tab", :type => "radio"}/
        %label{:for => "tab3_1"} Agree
        %input#tab3_2{"aria-controls" => "second_tab03", :name => "cp_tab", :type => "radio"}/
        %label{:for => "tab3_2"} Oposition
        .cp_tabpanels
          #first_tab03.cp_tabpanel
            = f.text_area :text, class:"tab-content"
          #second_tab03.cp_tabpanel
            = f.text_area :text, class:"tab-content2"

