.room-main
  .room-main-content
    - @talks.each do|talk|
      - if talk.status_id == 1
        .room-main-content__left
          .room-main-content__left-image
            = image_tag talk.user.image.url
          .room-main-content__left-text
            = talk.text
            - if talk.image.present?
              = image_tag talk.image.url


      - elsif talk.status_id == 2
        .room-main-content__right
          .room-main-content__left-text
            = talk.text
            - if talk.image.present?
              = image_tag talk.image.url
          .room-main-content__left-image
            = image_tag talk.user.image.url






