.mypage-main
  .mypage-main-box
    .my__header
      .my__header__content
        .box.line
          .box__title いいねした数
          .box__content
            .box__content-text
              = @other.likes.length
            = icon("fas fa-heart ",class: "icon")
        .box.line
          .box__title 参加TOURON数
          .box__content
            .box__content-text
              = @talk
            = icon("fas fa-comments",class: "icon")
        .box
          .box__title フォロワーの数
          .box__content
            .box__content-text
              = @other.followers.length
            = icon("fas fa-thumbs-up",class: "icon")

    .main--mypages
      .main--mypages-contents

        -# タブ
        .main--mypages-contents-tabs
          .content-name.choice-contens 全ての部屋
          .content-name2 自分の部屋
          .content-name3 いいね部屋

        -# メインボックス
        .main--mypages-contents-main
          .content-main
            = link_to "" , class: "content-main-box" do
              .content-main-box-img
                = image_tag "img_1.jpg", class: "touron__image"
              .content-main-box-text
                .content-main-box-text-title
                  .room-title ワンピース早めに終わった方がいい派？
                .content-main-box-text-contents
                  .content
                    = icon('far fa-heart fa-3x', class: 'icon')
                    .number 76
                  .content
                    = icon('fas fa-user', class: 'icon')
                    .number 14
    
            
                    
          .content-main2.content-remove
            - @other.rooms.each do |room|
              = link_to "" , class: "content-main-box" do
                .content-main-box-img
                  = image_tag "#{room.image}"
                .content-main-box-text
                  .content-main-box-text-title
                    .room-title
                      = room.name
                  .content-main-box-text-contents
                    .content
                      = icon('far fa-heart fa-3x', class: 'icon')
                      .number
                        = room.likes.ids.length
                    .content
                      = icon('fas fa-user', class: 'icon')
                      .number
                        - talk = Talk.where(room_id: room.id).select(:user_id).distinct
                        = talk.length
        
          .content-main3.content-remove 
            - @other.like_rooms.each do |room|
              = link_to "" , class: "content-main-box" do
                .content-main-box-img
                  = image_tag "#{room.image}"
                .content-main-box-text
                  .content-main-box-text-title
                    .room-title
                      = room.name
                  .content-main-box-text-contents
                    .content
                      = icon('far fa-heart fa-3x', class: 'icon')
                      .number
                        = room.likes.ids.length
                    .content
                      = icon('fas fa-user', class: 'icon')
                      .number
                        - talk = Talk.where(room_id: room.id).select(:user_id).distinct
                        = talk.length
