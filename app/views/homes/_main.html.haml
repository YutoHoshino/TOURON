.main__title
  .h1 全てのカテゴリー
  .category
    -@category.each do |category|
      .category__text
        = link_to category_search_rooms_path(category_id: category.id) do
          = category.name 

.home-body
  .home-body__main
    - @room_random.each do |room|
      .home-body__main-body
        .home-body__main-body__left
          = image_tag "#{room.image}", class: "touron__image"
          .home-body__main-body__left__box
            .home-body__main-body__left__box__text
              = room.name
            .home-body__main-body__left__box__tags
              - if room.tag_list[0].present? #1番目のタグが存在すれば表示する。
                = link_to rooms_path(tag_name: room.tag_list[0]), class: "text-white" do
                  = room.tag_list[0]
              - if room.tag_list[1].present? #2番目のタグが存在すれば表示する。
                = link_to rooms_path(tag_name: room.tag_list[1]), class: "text-white" do
                  = room.tag_list[1]
            .home-body__main-body__left__box__likes
              =link_to "#" do
                = image_tag "heart2"
              =link_to "#" do
                = image_tag "lock"

       

.home-footer
  .home-footer__name 新規の部屋
  .home-footer__main
    - @rooms.each do |room|
      .home-footer__main-body
        .home-footer__main-body__left
          = image_tag "#{room.image}", class: "touron__image"
          .home-footer__main-body__left__box
            .home-footer__main-body__left__box__text
              = room.name
            .home-footer__main-body__left__box__tags
              - if room.tag_list[0].present? #1番目のタグが存在すれば表示する。
                = link_to rooms_path(tag_name: room.tag_list[0]), class: "text-white" do
                  = room.tag_list[0]
              - if room.tag_list[1].present? #2番目のタグが存在すれば表示する。
                = link_to rooms_path(tag_name: room.tag_list[1]), class: "text-white" do
                  = room.tag_list[1]
            .home-footer__main-body__left__box__likes
              =link_to "#" do
                = image_tag "heart2"
              =link_to "#" do
                = image_tag "lock"

