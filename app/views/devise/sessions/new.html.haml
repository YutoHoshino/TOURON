.login-box
  .logo
    = link_to root_path do
      = image_tag("TOURON_logo-cutout.png", class:"top__image__1__photo",size:"400x90")
  .login-box__container
    .form-login-box
      = form_with model: @user, url: user_session_path, id: "new_user", class: "new_user", local: true do |f|
        %h2 ログイン
        .field
          = render 'layouts/error_messages', errors: @user.errors.full_messages_for(:email)
          = f.email_field :email, autofocus: true, placeholder: "メール" 
        .field
          = render 'layouts/error_messages', errors: @user.errors.full_messages_for(:password)
          = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
        .fields-submit
          = f.label :パスワードを記録する
          = f.check_box :remember_me
          = f.submit "サインイン", class: "sign-up-submit"
  .link-box
    .link-top
      %span パスワードをお忘れですか？  再設定は
      = link_to "こちら", ""
      %span から
    .link-under
      %span 登録がお済みでない方は
      = link_to "今すぐ作成", new_user_registration_path