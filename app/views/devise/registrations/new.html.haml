= render "homes/load"
.sign-up-box
  .sign-up-box-area

    -# 左ボックス
    .sign-up-box-area-box
      .text-box

        -# ロゴ
        .text-box-logo
          .text-box-logo-box
            = link_to root_path do
              = image_tag("logo.png", class:"top__image__1__photo",size:"400x110")

        .text-box-area
          = form_with model: @user, url: user_registration_path, id: "new_user", local: true do |f|
            
            .title-area アカウント作成

            .input-area
              .input-area-box
                = f.text_field :username, autofocus: true, class: "input"
                .input-area-box-title 名前
              = render 'devise/error_message', errors: @user.errors.full_messages_for(:username)
              .input-area-box
                = f.text_field :email, class: "input"
                .input-area-box-title メールアドレス
              = render 'devise/error_message', errors: @user.errors.full_messages_for(:email)
              .input-area-box
                = f.password_field :password, class: "input"
                .input-area-box-title パスワード
              = render 'devise/error_message', errors: @user.errors.full_messages_for(:password)
              .input-area-box
                = f.password_field :password_confirmation, class: "input"
                .input-area-box-title 確認パスワード
              = render 'devise/error_message', errors: @user.errors.full_messages_for(:password)
              .input-area-submit
                = f.submit "sign in", class: "sign-up-submit"

              .link-box
                .link-top
                  %span 既存ユーザーですか？ログインは
                  = link_to "こちら", new_user_session_path
                  %span から
  



    // 右ボックス
    .sign-up-box-area-view
      .swiper-container
        .swiper-wrapper
          .swiper-slide
            = image_tag "h1.jpg"
          .swiper-slide
            = image_tag "h2.jpg"
          .swiper-slide
            = image_tag "h3.jpg"
        .swiper-pagination
        .swiper-button-prev
        .swiper-button-next
