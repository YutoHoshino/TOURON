= render "header"

.category-search
  .category-search__name
    = @category_id.name
    のカテゴリー検索結果一覧
  .category-search__main
    - @rooms.each do |room|
      .category-search__main-body
        .category-search__main-body__left
          = image_tag "#{room.image}", class: "touron__image"
          .category-search__main-body__left__box
            .category-search__main-body__left__box__text
              = room.name
            .category-search__main-body__left__box__tags
              - if room.tag_list[0].present? #1番目のタグが存在すれば表示する。
                = link_to rooms_path(tag_name: room.tag_list[0]), class: "text-white" do
                  = room.tag_list[0]
              - if room.tag_list[1].present? #2番目のタグが存在すれば表示する。
                = link_to rooms_path(tag_name: room.tag_list[1]), class: "text-white" do
                  = room.tag_list[1]
            .category-search__main-body__left__box__likes
              =link_to "#" do
                = image_tag "heart2"
              =link_to "#" do
                = image_tag "lock"
              
= render "footer"